<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <Button
        android:id="@+id/btnBackToMainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#80a336"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Список растений"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#80a336"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnBackToMainMenu"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plantsRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleText"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/item_plant" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addPlantButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Добавить растение"
        android:backgroundTint="#80a336" />

</RelativeLayout>
